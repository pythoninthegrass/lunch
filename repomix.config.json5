{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "repomix-output.md",
    "style": "markdown",
    "parsableStyle": false,
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": true,
    "removeEmptyLines": false,
    "compress": true,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": false,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": ["**/*"],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      ".claude",
      ".editorconfig",
      ".gitignore",
      ".kiro",
      ".markdownlint.jsonc",
      ".serena",
      ".vscode",
      "**/.env",
      "**/*.bak",
      "**/*.db",
      "**/*.og",
      "**/*.pxd",
      "**/build/**",
      "**/requirements.txt",
      "CLAUDE.local.md",
      "CLAUDE.md",
      "LICENSE",
      "repomix.config.json5",
      "uv.lock",
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
